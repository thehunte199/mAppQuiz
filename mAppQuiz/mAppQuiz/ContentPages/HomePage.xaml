<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mAppQuiz.ContentPages.HomePage"
             Title="mAppQuiz Home Page">
    <ContentPage.Content>
        <ContentView>
            <StackLayout>
                <Label Text="Welcome to The Home Page!"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
                <Button Text="View Courses" 
                        Clicked="ViewCourses"
                        HorizontalOptions="CenterAndExpand"
                        IsVisible="True"/>
                <Button Text="Create Course" 
                        Clicked="CreateCourse"
                        HorizontalOptions="CenterAndExpand"
                        IsVisible="True"/>
            </StackLayout>
        </ContentView>
    </ContentPage.Content>
</ContentPage>