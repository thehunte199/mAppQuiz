<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:mAppQuiz"
             x:Class="mAppQuiz.LoginPage">
    <ContentPage.Content>
        <ScrollView VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <Image x:Name="logo"/>
                <Label Text="Username" HorizontalOptions="CenterAndExpand"/>
                <Entry x:Name="Username" Placeholder="username" />
                <Label Text="Password" HorizontalOptions="CenterAndExpand"/>
                <Entry x:Name="Password" Placeholder="must be greater than 8 characters" IsPassword="true" />
                <ContentView Padding="0, 20, 0, 0">
                    <Button Text="Login" Clicked="OnLoginClick" />
                </ContentView>
                <ContentView Padding = "0, 10, 0, 10">
                    <Label Text="or" HorizontalOptions="Center"/>
                </ContentView>
                <Button Text="Sign Up" Clicked="OnSignUpClick" />
                <Label x:Name="messageLabel" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>