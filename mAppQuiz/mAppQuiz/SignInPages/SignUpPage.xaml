<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mAppQuiz.SignUpPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="First Name: " />
            <Entry x:Name="FName" IsVisible="True"/>
            <Label Text="Last Name: "/>
            <Entry x:Name="LName" IsVisible="True"/>
            <Label Text="Email: "/>
            <Entry x:Name="Email" IsVisible="True" Keyboard="Email"/>
            <Label Text="Username: "/>
            <Entry x:Name="Username" IsVisible="True"/>
            <Label Text="Password" />
            <Entry x:Name="Password" Placeholder="must be greater than 8 characters" IsPassword="true" />
            <Button Text="Sign Up" Clicked="OnSignUp" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>